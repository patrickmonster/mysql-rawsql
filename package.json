{
    "name": "mysql-rowquery",
    "version": "1.1.1",
    "description": "mysql row query",
    "main": "dist/cjs/index.js",
    "module": "dist/mjs/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "build": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup.sh",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "exports": {
        ".": {
            "import": "./dist/mjs/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/patrickmonster/mysql-rowsql.git"
    },
    "author": "Soung jin Ryu <neocat@kakao.com>",
    "homepage": "https://github.com/patrickmonster/mysql-rowsql#readme",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^22.13.1",
        "jest": "^30.0.4",
        "ts-jest": "^29.4.0",
        "typescript": "^5.7.3"
    },
    "prettier": {
        "trailingComma": "es5",
        "arrowParens": "avoid",
        "endOfLine": "lf",
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "tabWidth": 4
    },
    "dependencies": {
        "mysql2": "^3.12.0"
    }
}
